source 'https://rubygems.org'

# Specify the version of Jekyll used by GitHub Pages
gem 'jekyll', '3.10.0'

# GitHub Pages gem for managing Jekyll dependencies
gem 'github-pages', group: :jekyll_plugins

# Additional plugins you need
group :jekyll_plugins do
    gem 'jekyll-archives'
    gem 'jekyll-diagrams'
    gem 'jekyll-email-protect'
    gem 'jekyll-feed'
    gem 'jekyll-imagemagick'
    gem 'jekyll-minifier'
    gem 'jekyll-paginate-v2'
    # Remove jekyll-scholar as it requires Jekyll 4.0+
    # gem 'jekyll-scholar', '7.1.3'
    gem 'jekyll-sitemap'
    gem 'jekyll-link-attributes'
    gem 'jekyll-twitter-plugin'
    gem 'jemoji'
    gem 'unicode_utils'
    gem 'webrick', '~> 1.7'
end

# Other plugins
group :other_plugins do
    gem 'httparty'
    gem 'feedjira'
end

gem "jekyll-scholar", "~> 5.16"
